{
  "name": "ui5-xml-support",
  "displayName": "UI5 XML Support",
  "description": "Syntax highlighting for SAPUI5 XML view.",
  "version": "0.5.0",
  "repository": "m8524769/vscode-ui5-xml",
  "author": "yk <m8524769@gmail.com> (https://m8524769.github.io/)",
  "publisher": "m8524769",
  "license": "MIT",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "ui5",
    "sapui5",
    "xml"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onLanguage:xml"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "dev": "run-p syntax:watch tsc:watch",
    "syntax:watch": "yaml2json syntaxes/xml.tmLanguage.yaml --save --watch",
    "tsc:watch": "tsc -watch -p ./"
  },
  "contributes": {
    "languages": [
      {
        "id": "xml",
        "aliases": [
          "XML",
          "xml"
        ],
        "extensions": [
          ".view.xml",
          ".fragment.xml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "xml",
        "scopeName": "text.xml",
        "path": "./syntaxes/xml.tmLanguage.json",
        "embeddedLanguages": {
          "text.xml": "xml",
          "source.js": "javascript"
        },
        "tokenTypes": {
          "meta.tag string.quoted": "other"
        }
      }
    ],
    "snippets": [
      {
        "language": "xml",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.50.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.0.2",
    "yamljs": "^0.3.0"
  }
}
